# Africa Suite Pulse - Configuration Production
# Variables d'environnement pour le déploiement en production

# Application
VITE_APP_NAME="Africa Suite Pulse"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="production"
VITE_APP_DEBUG="false"

# URLs de base
VITE_API_BASE_URL="https://api.africasuitepulse.com"
VITE_APP_BASE_URL="https://app.africasuitepulse.com"
VITE_CDN_BASE_URL="https://cdn.africasuitepulse.com"

# Supabase Production
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY="your-production-anon-key"
VITE_SUPABASE_SERVICE_ROLE_KEY="your-production-service-role-key"

# Sécurité
VITE_ENCRYPTION_KEY="your-production-encryption-key-32-chars"
VITE_JWT_SECRET="your-production-jwt-secret-key"
VITE_CSRF_SECRET="your-production-csrf-secret-key"
VITE_SESSION_SECRET="your-production-session-secret"

# APIs Externes - Production
VITE_OPENAI_API_KEY="your-production-openai-key"
VITE_STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-live-key"
VITE_PAYPAL_CLIENT_ID="your-production-paypal-client-id"

# Mobile Money APIs - Production
VITE_ORANGE_MONEY_API_KEY="your-production-orange-money-key"
VITE_MTN_MONEY_API_KEY="your-production-mtn-money-key"
VITE_MOOV_MONEY_API_KEY="your-production-moov-money-key"

# Banques Centrales - Production
VITE_BCEAO_API_KEY="your-production-bceao-key"
VITE_BEAC_API_KEY="your-production-beac-key"

# DGI Côte d'Ivoire - Production
VITE_DGI_API_KEY="your-production-dgi-key"
VITE_FNE_API_KEY="your-production-fne-key"

# Crypto APIs - Production
VITE_STELLAR_NETWORK="public"
VITE_CELO_NETWORK="mainnet"
VITE_AKOIN_API_KEY="your-production-akoin-key"

# Monitoring et Analytics
VITE_SENTRY_DSN="your-production-sentry-dsn"
VITE_GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
VITE_HOTJAR_ID="your-hotjar-id"

# Performance
VITE_ENABLE_PWA="true"
VITE_ENABLE_SERVICE_WORKER="true"
VITE_CACHE_DURATION="3600"
VITE_CDN_ENABLED="true"

# Fonctionnalités
VITE_ENABLE_AI_FEATURES="true"
VITE_ENABLE_FINTECH="true"
VITE_ENABLE_CRYPTO="true"
VITE_ENABLE_MOBILE_MONEY="true"
VITE_ENABLE_BANKING="true"
VITE_ENABLE_FISCAL="true"

# Limites de production
VITE_MAX_FILE_SIZE="10485760"
VITE_MAX_USERS_CONCURRENT="1000"
VITE_RATE_LIMIT_REQUESTS="1000"
VITE_RATE_LIMIT_WINDOW="3600"

# Notifications
VITE_ENABLE_PUSH_NOTIFICATIONS="true"
VITE_VAPID_PUBLIC_KEY="your-vapid-public-key"
VITE_FCM_SENDER_ID="your-fcm-sender-id"

# Backup et Sauvegarde
VITE_BACKUP_ENABLED="true"
VITE_BACKUP_FREQUENCY="daily"
VITE_BACKUP_RETENTION="30"

# Conformité
VITE_GDPR_ENABLED="true"
VITE_AUDIT_LOGS_ENABLED="true"
VITE_DATA_RETENTION_DAYS="2555"

# Support Multi-tenant
VITE_MULTI_TENANT="true"
VITE_DEFAULT_TENANT="africasuite"

# Localisation
VITE_DEFAULT_LANGUAGE="fr"
VITE_SUPPORTED_LANGUAGES="fr,en,ar,sw"
VITE_DEFAULT_CURRENCY="XOF"
VITE_SUPPORTED_CURRENCIES="XOF,XAF,USD,EUR"

# Thème Africain
VITE_AFRICAN_THEME_ENABLED="true"
VITE_CULTURAL_FEATURES_ENABLED="true"
VITE_PROVERBS_ENABLED="true"
VITE_TRADITIONAL_PATTERNS="true"

