# AfricaSuite Production Environment Configuration
# Copier ce fichier vers .env et remplir les valeurs

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
DEPLOYMENT_MODE=selfhosted
NODE_ENV=production
DOMAIN=votre-hotel.local

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_PASSWORD=VotreMotDePasseSecurise123!
POSTGRES_DB=africasuite
POSTGRES_USER=africasuite

# ===========================================
# CACHE CONFIGURATION
# ===========================================
REDIS_PASSWORD=VotreMotDePasseRedis456!

# ===========================================
# OBJECT STORAGE CONFIGURATION
# ===========================================
MINIO_USER=africastorage
MINIO_PASSWORD=VotreMotDePasseMinio789!

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Générer avec: openssl rand -base64 32
JWT_SECRET=VotreCleJWTSecuriseeSuper32Caracteres!
SESSION_SECRET=VotreCleSessionSecuriseeSuper32Chars!

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_MULTISITE=false
ENABLE_CLOUD_SYNC=false
CLOUD_ENDPOINT=

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_SCHEDULE=0 2 * * *  # 2h du matin tous les jours
BACKUP_RETENTION=30        # Garder 30 jours
CLOUD_BACKUP=false
RCLONE_CONFIG=

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
GRAFANA_PASSWORD=admin123!

# ===========================================
# EMAIL CONFIGURATION (Optionnel)
# ===========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@votre-hotel.com

# ===========================================
# PAYMENT GATEWAYS (Optionnel)
# ===========================================
# Orange Money
ORANGE_MONEY_API_KEY=
ORANGE_MONEY_SECRET=

# MTN Money
MTN_MONEY_API_KEY=
MTN_MONEY_SECRET=

# Moov Money
MOOV_MONEY_API_KEY=
MOOV_MONEY_SECRET=

# ===========================================
# INTEGRATIONS (Optionnel)
# ===========================================
# PMS Legacy
LEGACY_PMS_API_URL=
LEGACY_PMS_API_KEY=

# Booking Engines
BOOKING_COM_API_KEY=
EXPEDIA_API_KEY=

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info          # debug, info, warn, error
LOG_TO_FILE=true
LOG_RETENTION_DAYS=30

# ===========================================
# PERFORMANCE TUNING
# ===========================================
MAX_UPLOAD_SIZE=50MB
SESSION_TIMEOUT=8h
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# ===========================================
# TIMEZONE & LOCALE
# ===========================================
TZ=Africa/Abidjan
LOCALE=fr_FR.UTF-8
DEFAULT_CURRENCY=XOF    # FCFA

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================
SSL_CERT_PATH=/etc/ssl/private/africasuite.crt
SSL_KEY_PATH=/etc/ssl/private/africasuite.key

# ===========================================
# COMPLIANCE & REGULATORY
# ===========================================
GDPR_MODE=true
AUDIT_RETENTION_YEARS=7
TAX_RATE_DEFAULT=18     # TVA Côte d'Ivoire par défaut